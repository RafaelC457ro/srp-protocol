{
  "name": "srp-protocol",
  "version": "0.1.0",
  "description": "Secure Remote Password Protocol",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "browser": "dist/index.umd.js",
  "module": "dist/index.m.js",
  "source": "src/index.ts",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" --write \"test/**/*.ts\"",
    "format-check": "prettier-check \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "tslint -p . --fix -t stylish",
    "test": "karma start --single-run",
    "build": "microbundle build --sourcemap false --target browser",
    "coverage": "npm run spec -- --coverage",
    "coveralls": "npm run coverage && cat coverage/lcov.info | coveralls",
    "clean": "rimraf dist",
    "prepublish": "npm run clean && npm run format-check && npm run lint && npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiamsantos/srp-protocol.git"
  },
  "keywords": [
    "srp",
    "secure",
    "remote",
    "password",
    "protocol"
  ],
  "author": "Thiago Santos",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/thiamsantos/srp-protocol/issues"
  },
  "homepage": "https://github.com/thiamsantos/srp-protocol#readme",
  "devDependencies": {
    "coveralls": "^3.0.2",
    "jasmine-core": "^3.3.0",
    "karma": "^3.1.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^1.1.2",
    "karma-typescript": "^3.0.13",
    "microbundle": "^0.7.0",
    "prettier": "^1.14.3",
    "prettier-check": "^2.0.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^5.2.1",
    "typescript": "^3.1.4"
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "bracketSpacing": false,
    "trailingComma": "none",
    "tabWidth": 4,
    "parser": "typescript"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ]
}
