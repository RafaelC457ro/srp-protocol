{
  "name": "srp-protocol",
  "version": "0.1.0",
  "description": "Secure Remote Password Protocol",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "browser": "dist/index.umd.js",
  "module": "dist/index.m.js",
  "source": "src/index.ts",
  "scripts": {
    "prelint": "prettier --write \"src/**/*.ts\" --write  --write \"test/**/*.ts\"",
    "lint": "tslint -p . --fix -t stylish",
    "test": "jest",
    "build": "microbundle build --sourcemap false --target browser",
    "coverage": "npm run spec -- --coverage",
    "coveralls": "npm run coverage && cat coverage/lcov.info | coveralls",
    "clean": "rimraf dist",
    "prepublish": "npm run clean && npm run lint && npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiamsantos/srp-protocol.git"
  },
  "keywords": [
    "srp",
    "secure",
    "remote",
    "password",
    "protocol"
  ],
  "author": "Thiago Santos",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/thiamsantos/srp-protocol/issues"
  },
  "homepage": "https://github.com/thiamsantos/srp-protocol#readme",
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "microbundle": "^0.7.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^5.2.1",
    "typescript": "^3.1.4"
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "bracketSpacing": false,
    "trailingComma": "none",
    "tabWidth": 4,
    "parser": "typescript"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
